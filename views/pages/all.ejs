<% layout("/layout/boilerplate.ejs") -%>

<body>
    <header>
        <div class="panel">
            <div class="text-catch mb-4">
                DISCOVER OUR DELICIOUS MENU
            </div>
        </div>
    </header>
  
<div class="filters">
    <a href="/listings/filter/meal"   class="filter"><i class="fa-solid fa-bowl-food"></i>&nbsp; Meal</a>
    <a  href="/listings/filter/drinks" class="filter"><i class="fa-solid fa-martini-glass"></i>&nbsp;Drinks</a>
    <a href="/listings/filter/desert" class="filter"><i class="fa-solid fa-ice-cream"></i> &nbsp;Deserts</a>
</div>
    <div class="menu">
        <div class="menu-container">
            
            <% for (listing of allListings) { %>
                
                <div class="menu-item">
                    <a href="/listings/<%= listing.id %>" class="item-link">
                        <div class="card mb-2">
                            <div class="image"><img src="<%= listing.image %>" alt="<%= listing.name %>"></div>
                            <span class="title"><%= listing.name %></span>
                            <span class="price">&#8377;<%= listing.price %></span>
                        </div>
                    </a>
                </div>
              
            <% } %>
        </div>
    </div>

    <style>
        /* Add your CSS styles here */
     

        @media (max-width: 720px) {
            .card{
                 width: 175px;
                 height: auto;
                padding: 0.25em;
                
                padding-bottom: 3.4em;
            }
            .menu-item{
                margin: 0;
                margin-bottom: 2rem;
            }
            .card img{
                width: 100%;
                max-width: 100%;
                height: 120px;
            }
            .menu-container{
                margin-left: auto;
            }
            
        }
     .filters {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    width: 100%;
    height: 5rem;
    background: linear-gradient(135deg, #ff7e5f, #feb47b); /* Gradient background */
     /* Rounded corners */
    padding: 0 1rem; /* Add some padding */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow */
}

.filter {
    
    text-decoration: none;
    color: #fff; /* White text color */
    height: 3rem; /* Increase height for better visibility */
    display: flex; /* Make it flex container */
    align-items: center; /* Center content vertically */
    padding: 0 1.5rem; /* Add padding */
    border-radius: 20px; /* Rounded corners */
    cursor: pointer; /* Change cursor to pointer on hover */
    transition: background-color 0.3s ease; /* Smooth background color transition */
}

/* Different colors for each filter */
.filter:nth-child(1) {
    background-color: #ff4e50; /* Red color */
}

.filter:nth-child(2) {
  background-color: #ff69b4;  /* Orange color */
}

.filter:nth-child(3) {
    background-color: #2ecc71; /* Yellow color */
}

/* Icons */
.filter i {
    /* fill: black ;  */
   
    font-size: larger;
    margin-right: 0.5rem; /* Add space between icon and text */
}


.filter:hover  {
color: #fff; 
    fill: inherit; /* Keep the same icon color on hover */
}
/* Hover effect */
.filter:hover {
    background-color: #e74c3c !important; /* Darker background color on hover */
}


    </style>
</body>

</body>
</html>
